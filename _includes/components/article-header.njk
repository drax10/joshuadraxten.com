{%- if page and not post -%}
    {%- set post = page -%}
{%- endif -%}
{%- if goback -%}
    {%- set post_url = "/" -%}
{%- else -%}
    {%- set post_url = post.url -%}
{%- endif -%}

<header>
    <a href="{{ post_url }}">
        <div class="back-button {% if not goback %}hidden{% endif %}">
            <svg fill="#ffffff" height="24" viewBox="0 0 24 24" width="24" xmlns="http://www.w3.org/2000/svg">
                <path d="M0 0h24v24H0z" fill="none"/>
                <path d="M20 11H7.83l5.59-5.59L12 4l-8 8 8 8 1.41-1.41L7.83 13H20v-2z"/>
            </svg>
        </div>
        <div style="width: 100%; padding: 54px 0; position: relative;" class="offsetLeftOnHover">
            <h1>{{ post.data.title | safe | lowercase or title | safe | lowercase }}</h1>
            <h2>{{ post.data.subtitle | lowercase | safe }}{{ subtitle | lowercase | safe }}</h2>
            {# <span class="metadata">
                {%- if author -%}
                    By: {{ author }}
                {%- elseif post.data.author -%}
                    By: {{ post.data.author }}
                {%- endif -%}

                {%- if (author or post.data.author) and (date or post.data.date) -%}
                    &nbsp;|&nbsp;
                {%- endif -%}

                {%- if date -%}
                    <time datetime="{{ date }}">{{ date | dateymd }}</time>
                {%- elseif post.data.date -%}
                    <time datetime="{{ post.data.date }}">{{ post.data.date | dateymd }}</time>
                {%- endif -%}
            </span> #}
        </div>
    </a>
</header>